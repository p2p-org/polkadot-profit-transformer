{
  "name": "mbelt",
  "version": "3.0.0",
  "description": "Stream polkadot blocks and events to Kafka",
  "main": "src/main.ts",
  "repository": "",
  "author": "Vasiliy Shapovalov & Mikhail Mozhaev & Dmitry Mandrika & Maxim Manylov & Ivan Sidorov",
  "license": "Apache 2.0",
  "private": false,
  "scripts": {
    "build": "npx tsc",
    "start": "npx ts-node -r tsconfig-paths/register src/index.ts",
    "start:prod": "node -r ts-node/register/transpile-only -r tsconfig-paths/register --trace-warnings ./dist/app.js",
    "start:inspect": "node --inspect -r ts-node/register/transpile-only -r tsconfig-paths/register --trace-warnings ./dist/app.js",
    "start:docker": "node --inspect --require ./tsconfig-paths-bootstrap.js ./dist/app.js",
    "dev:main": "npx ts-node -r tsconfig-paths/register src/index.ts",
    "db:intro": "NODE_TLS_REJECT_UNAUTHORIZED=0 env-cmd -f ./.env  schemats generate --config ./src/apps/common/infra/postgresql/schemats.json -o ./schema.ts",
    "lint": "npx eslint --ext .js,.ts src/main/index.ts",
    "lint:fix": "npx eslint ./src/apps/main --fix",
    "lint-staged": "lint-staged",
    "test": "npx jest --maxWorkers=1",
    "migrations:up": "./node_modules/.bin/knex --knexfile ./migrations.ts migrate:latest",
    "migrations:list": "./node_modules/.bin/knex --knexfile ./migrations.ts migrate:list"
  },
  "dependencies": {
    "@polkadot/api": "^9.6.2",
    "@types/knex": "^0.16.1",
    "amqp-connection-manager": "^4.1.6",
    "amqplib": "^0.10.0",
    "better-queue": "^3.8.10",
    "dotenv": "^16.0.1",
    "envalid": "^7.3.1",
    "express": "^4.18.1",
    "express-basic-auth": "^1.2.1",
    "http-proxy-middleware": "^2.0.6",
    "knex": "^2.4.2",
    "moonbeam-types-bundle": "^2.0.9",
    "needle": "^3.2.0",
    "node-cron": "^3.0.2",
    "pg": "^8.7.3",
    "pino": "^8.1.0",
    "pino-pretty": "^8.1.0",
    "prom-client": "^14.0.1",
    "reflect-metadata": "^0.1.13",
    "scale-codec": "^0.10.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.0",
    "typedi": "^0.10.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@babel/core": "^7.14.3",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/plugin-proposal-decorators": "^7.14.2",
    "@babel/preset-env": "^7.14.2",
    "@babel/preset-typescript": "^7.13.0",
    "@typed-code/schemats": "^4.3.0",
    "@types/amqplib": "^0.8.2",
    "@types/better-queue": "^3.8.3",
    "@types/express": "^4.17.13",
    "@types/jest": "^28.1.3",
    "@types/needle": "^3.2.0",
    "@types/node": "^18.0.0",
    "@types/node-cron": "^3.0.7",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^4.28.3",
    "@typescript-eslint/parser": "^4.28.3",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.3",
    "env-cmd": "^10.1.0",
    "eslint": "7.9.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-config-standard": "14.1.1",
    "eslint-plugin-import": "2.22.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-standard": "4.0.1",
    "jest": "^28.1.1",
    "prettier": "^2.7.1",
    "type-coverage": "^2.17.2",
    "typescript": "^4.3.5"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./**/*.{js,ts}",
      "!./**/*.types.ts",
      "!./repositories/**/*",
      "!./**/polkadot.module.ts",
      "!./**/logger.module.ts",
      "!./**/postgres.module.ts",
      "!./routes/**/*"
    ],
    "coverageReporters": [
      "text"
    ],
    "coverageDirectory": "../coverage",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "moduleNameMapper": {
      "@services/(.*)": "<rootDir>/services/$1",
      "@modules/(.*)": "<rootDir>/modules/$1",
      "@repositories/(.*)": "<rootDir>/repositories/$1"
    },
    "transform": {
      "^.+\\.(js|ts)$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "/node_modules/(?!(@polkadot/|@babel/runtime/helpers/esm/))"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "testEnvironment": "node"
  }
}
