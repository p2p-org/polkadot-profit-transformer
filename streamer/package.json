{
  "name": "polkadot-streamer",
  "version": "0.0.3",
  "description": "Stream polkadot blocks and events to Kafka",
  "main": "src/main.ts",
  "repository": "",
  "author": "Vasiliy Shapovalov & Mikhail Mozhaev & Dmitry Mandrika",
  "license": "Apache 2.0",
  "private": false,
  "scripts": {
    "build": "npx tsc",
    "start": "npx ts-node -r tsconfig-paths/register src/main.ts",
    "start:prod": "node -r ts-node/register/transpile-only -r tsconfig-paths/register --trace-warnings ./dist/main.js --sync --sub-fin-head",
    "dev": "npx ts-node -r tsconfig-paths/register src/main.ts --sync",
    "dev:watchdog": "npx ts-node -r tsconfig-paths/register src/main.ts --watchdog",
    "lint": "npx eslint --ext .js,.ts src/main.ts",
    "lint:fix": "npx eslint ./src --fix",
    "lint-staged": "lint-staged",
    "test": "mocha --timeout 2000000 ./**/test/e2e/*.js",
    "test-new": "npx jest --maxWorkers=1",
    "prepare": "cd .. && husky install streamer/.husky"
  },
  "dependencies": {
    "@polkadot/api": "^6.3.1",
    "@polkadot/api-derive": "^6.3.1",
    "@polkadot/rpc-core": "^6.3.1",
    "@polkadot/types-known": "^6.3.1",
    "@polkadot/util": "^7.0.2",
    "async-mutex": "^0.2.6",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "dotenv": "^8.2.0",
    "fastify": "^3.19.1",
    "fastify-swagger": "^3.5.0",
    "fastq": "^1.11.1",
    "kafkajs": "^1.15.0",
    "pg": "^8.5.1",
    "pino": "^6.12.0",
    "pino-pretty": "^4.5.0",
    "prom-client": "^13.1.0",
    "reflect-metadata": "^0.1.13",
    "tsconfig-paths": "^3.10.1",
    "typedi": "^0.10.0",
    "yargs": "^16.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.14.3",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/plugin-proposal-decorators": "^7.14.2",
    "@babel/preset-env": "^7.14.2",
    "@babel/preset-typescript": "^7.13.0",
    "@polkadot/types": "^6.3.1",
    "@types/dotenv": "^8.2.0",
    "@types/jest": "^26.0.24",
    "@types/pg": "^7.14.11",
    "@types/pino": "^6.3.9",
    "@types/yargs": "^16.0.4",
    "@typescript-eslint/eslint-plugin": "^4.28.3",
    "@typescript-eslint/parser": "^4.28.3",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.3",
    "eslint": "7.9.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-config-standard": "14.1.1",
    "eslint-plugin-import": "2.22.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-standard": "4.0.1",
    "husky": "^6.0.0",
    "jest": "^27.0.0-next.9",
    "lint-staged": "^10.5.4",
    "mocha": "^8.2.1",
    "nodemon": "2.0.4",
    "prettier": "^2.1.2",
    "ts-jest": "^27.0.0-next.12",
    "ts-node": "^9.1.1",
    "type-coverage": "^2.17.2",
    "typescript": "^4.3.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm lint-staged",
      "pre-push": "npm run type-coverage && npm run build"
    }
  },
  "lint-staged": {
    "*.(ts)": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "*.(json|js)": [
      "prettier --write"
    ]
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./**/*.{js,ts}",
      "!./**/*.types.ts",
      "!./repositories/**/*",
      "!./**/polkadot.module.ts",
      "!./**/logger.module.ts",
      "!./**/postgres.module.ts",
      "!./routes/**/*"
    ],
    "coverageReporters": [
      "text"
    ],
    "coverageDirectory": "../coverage",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "moduleNameMapper": {
      "@services/(.*)": "<rootDir>/services/$1",
      "@modules/(.*)": "<rootDir>/modules/$1",
      "@repositories/(.*)": "<rootDir>/repositories/$1"
    },
    "transform": {
      "^.+\\.(js|ts)$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "/node_modules/(?!(@polkadot/|@babel/runtime/helpers/esm/))"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "testEnvironment": "node"
  }
}
